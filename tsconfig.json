{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": [ "es2021" ],

    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },

  
  "include": [ "./src/**/*" ],
  "exclude": [ "node_modules", "tests" ]
}